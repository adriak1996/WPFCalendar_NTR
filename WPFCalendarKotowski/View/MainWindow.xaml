            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0.5,0.5,0.5,0.5" />
                <Setter Property="BorderBrush" Value="Gray" />
                <Setter Property="Border.CornerRadius" Value="15,15,15,15" />
                <Setter Property="FontStyle" Value="{Binding FontStyle, Mode = OneWay}"/>
                <Setter Property="Background" Value="{Binding ButtonColor, Mode = OneWay}"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="Margin" Value="0.5,0.5,0.5,0.5" />
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="{Binding Color, Mode = OneWay}"/>
                <Setter Property="FontStyle" Value="{Binding FontStyle, Mode = OneWay}"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>

        <Button x:Name="prev1"  Command="{Binding GoPrev}"  Grid.Column="0" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Prev</Button>
        <Button x:Name="prev2"  Command="{Binding GoPrev}"  Grid.Column="0" Grid.Row="5" Margin="0.5,0.5,0.5,0.5">Prev</Button>
        <Button x:Name="next1"  Command="{Binding GoNext}" Grid.Column="8" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Next</Button>
        <Button x:Name="next2"  Command="{Binding GoNext}" Grid.Column="8" Grid.Row="5" Margin="0.5,0.5,0.5,0.5">Next</Button>

        <Label Grid.Column="1" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Monday</Label>
        <Label Grid.Column="2" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Tuesday</Label>
        <Label Grid.Column="3" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Wednsday</Label>
        <Label Grid.Column="4" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Thursday</Label>
        <Label Grid.Column="5" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Friday</Label>
        <Label Grid.Column="6" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Saturday</Label>
        <Label Grid.Column="7" Grid.Row="0" Margin="0.5,0.5,0.5,0.5">Sunday</Label>

        <Label Grid.Column="1" Grid.Row="5" Margin="0.5,0.5,0.5,0.5">Monday</Label>
        <Label Grid.Column="2" Grid.Row="5" Margin="0.5,0.5,0.5,0.5">Tuesday</Label>
